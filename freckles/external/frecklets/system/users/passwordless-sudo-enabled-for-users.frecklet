doc:
  short_help: Grant passwordless sudo permission to user.
  help: |
    Ensures that one or more users can use passwordless sudo.

    This also makes sure that the sudo package is installed (if not already available), and creates the user(s) (if not already present).

  further_reading:
    - "['freckfrackery.basic-security' Ansible role](https://gitlab.com/freckfrackery/freckfrackery.basic-security)"

args:
  users:
    type: list
    required: true
    schema:
      type: string
    cli:
      nargs: -1
      param_type: "argument"
      metavar: USER

meta:
  tags:
    - user
    - user-management
    - system
    - sudo
    - passwordless-sudo

frecklets:
  - passwordless-sudo-enabled-for-users-impl:
      users: "{{:: users ::}}"



