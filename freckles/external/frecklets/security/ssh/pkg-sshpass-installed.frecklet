doc:
  short_help: "Installs the sshpass package."
  help: |
    Installs the '[sshpass](https://www.cyberciti.biz/faq/noninteractive-shell-script-ssh-password-provider/)' utility.

    'sshpass' is a small application that helps using ssh within scripts. There are some security implications to using it,
    so make sure to check out the webpage.

  furter_reading:
    - "[sshpass homepage](https://www.cyberciti.biz/faq/noninteractive-shell-script-ssh-password-provider/)"

args:
  pkg_mgr:
    doc:
      short_help: the package manager to use
    type: string
    default: auto
    required: false
    cli:
      metavar: PKG-MGR

meta:
  is_interface: true
  tags:
    - sshpass
    - install
    - pkg

frecklets:
  - pkgs-installed:
      pkg_mgr: "{{:: pkg_mgr ::}}"
      packages:
        - name: epel-release
          pkgs:
            centos:
              - epel-release
            default: ignore
  - pkgs-installed:
      packages:
        - name: sshpass
          pkg_mgr: "{{:: pkg_mgr ::}}"