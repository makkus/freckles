doc:
  short_help: "Installs the sshpass package."
  help: |
    Installs the '[nmap](https://nmap.org) network scanning utility.

  furter_reading:
    - "[nmap homepage](https://nmap.org)"

args:
  pkg_mgr:
    doc:
      short_help: the package manager to use
    type: string
    default: auto
    required: false
    cli:
      metavar: PKG-MGR

meta:
  is_interface: true
  tags:
    - nmap
    - install
    - pkg

frecklets:

  - pkgs-installed:
      packages:
        - name: nmap
          pkg_mgr: "{{:: pkg_mgr ::}}"